@helper ShowInventory(Inventory item)
{
    @item.Make<text>-</text>
    @item.Color<text>(</text>
    @item.PetName<text>)</text>
}
@functions
{

    public IList<Inventory> SortCars(IList<Inventory> cars)
    {
        var list = from s in cars orderby s.PetName select s;
        return list.ToList();
    }
}
