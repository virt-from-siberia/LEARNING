<h1>Корзина</h1>
<div id="card">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Названиие</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
        </thead>
    </table>

    <p><strong>Цена : <span class="price">{{price}}</span></strong></p>
    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>